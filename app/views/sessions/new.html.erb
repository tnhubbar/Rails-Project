<h1> Login or Sign up</h1>


<%= form_for :user do |f| %>
  <%= f.label "Username" %>
  <%= f.text_field :username %>

  <%= f.label "Password" %>
  <%= f.password_field :password %>

  <%= f.submit "log in" %>
  <%= link_to "Log in with Facebook", '/auth/facebook'%>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
