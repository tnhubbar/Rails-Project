<h1>Sign Up Form </h1>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>
<%= f.label "Name:" %>
  <%= f.text_field :name %>
  
  <%= f.label "Username" %>
  <%= f.text_field :username %>

  <%= f.label "password" %>
  <%= f.password_field :password %>

  <%= f.label "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign Up" %>
<% end %>