<h1>Sign Up Form </h1>



<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>
<%= f.label "Name:" %>
  <%= f.text_field :name %>
  
  <%= f.label "Username" %>
  <%= f.text_field :username %>

  <%= f.label "password" %>
  <%= f.password_field :password %>

  <%= f.label "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign Up" %>
<% end %>